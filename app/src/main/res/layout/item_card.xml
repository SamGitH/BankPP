<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/item"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/item_card_margin_bottom">

    <ImageView
        android:id="@+id/ic_card_img"
        android:layout_width="@dimen/ic_iv_width"
        android:layout_height="@dimen/ic_iv_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/normal_space"
        tools:src="@android:drawable/sym_call_incoming"
        />

    <TextView
        android:id="@+id/ic_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ic_card_number"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_card_img"
        android:layout_marginTop="@dimen/ic_tv_margin_tb"
        android:layout_marginBottom="@dimen/ic_tv_margin_tb"
        android:layout_marginStart="@dimen/normal_space"
        tools:text="4565 4554 5425 2456"
        />

    <ImageView
        android:id="@+id/ic_card_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/normal_space"
        />

</androidx.constraintlayout.widget.ConstraintLayout>